<Window x:Class="Ui.VfsManager"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Virtual File System Manager" Height="300" Width="400"
    ResizeMode="NoResize" ShowInTaskbar="False" WindowStartupLocation="CenterOwner"
    Background="{x:Static SystemColors.ControlBrush}"
    >
  <Window.Resources>
    <Style TargetType="{x:Type DockPanel}">
      <Setter Property="Margin" Value="5" />
    </Style>
    <Style TargetType="{x:Type Button}">
      <Setter Property="Margin" Value="5" />
    </Style>
  </Window.Resources>
  <DockPanel>
    <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" HorizontalAlignment="Right">
      <Button Content="OK" Width="100" Height="23" />
      <Button Content="Cancel" Width="100" Height="23" Click="btnCancel_Click" />
    </StackPanel>
    <ListView VerticalAlignment="Stretch">
      <ListView.View>
        <GridView>
          <GridViewColumn Header="Device"/>
          <GridViewColumn Header="Binding Type" />
          <GridViewColumn Header="Binding Value" />
        </GridView>
      </ListView.View>
      <ListViewItem>Allo</ListViewItem>
    </ListView>
  </DockPanel>
</Window>
