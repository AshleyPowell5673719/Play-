<Window x:Class="Ui.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Ui" Width="500" Height="500" WindowStartupLocation="CenterScreen"
    >
  <DockPanel>
    <Menu DockPanel.Dock="Top">
      <MenuItem Header="_File">
        <MenuItem Header="Load .ELF" InputGestureText="Ctrl+O" />
        <Separator />
        <MenuItem Header="Quit" Click="mnuQuit_Click" InputGestureText="Alt+F4" />
      </MenuItem>
      <MenuItem Header="Virtual Machine">
        <MenuItem Header="Resume / Pause" />
        <MenuItem Header="Reset" />
      </MenuItem>
      <MenuItem Header="Options">
        <MenuItem Header="Renderer Settings..." />
        <MenuItem Header="Virtual File System Manager..." Click="mnuVfsManager_Click" />
        <MenuItem Header="Configuration Editor..." />
      </MenuItem>
    </Menu>
    <StatusBar DockPanel.Dock="Bottom">
      <StatusBarItem>
        <TextBlock>Hello</TextBlock>
      </StatusBarItem>
    </StatusBar>
    <Rectangle Fill="Black" />
  </DockPanel>
</Window>
